@model List<OlympicDataTransfer.Models.Ticket>

<h2>Tickets</h2>
<a asp-action="Create" class="btn btn-primary mb-3">Add Ticket</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Sprint</th>
            <th>Points</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var t in Model)
        {
            <tr>
                <td>@t.Name</td>
                <td>@t.Description</td>
                <td>@t.SprintNumber</td>
                <td>@t.Points</td>
                <td>@t.Status</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@t.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@t.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
