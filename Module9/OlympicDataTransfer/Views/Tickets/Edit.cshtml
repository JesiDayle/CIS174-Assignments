@model OlympicDataTransfer.Models.Ticket

@{
    ViewData["Title"] = "Edit Ticket";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="SprintNumber"></label>
        <input asp-for="SprintNumber" class="form-control" type="number" />
    </div>
    <div class="form-group">
        <label asp-for="Points"></label>
        <input asp-for="Points" class="form-control" type="number" />
    </div>
    <div class="form-group">
        <label asp-for="Status"></label>
        <select asp-for="Status" class="form-control">
            <option>To Do</option>
            <option>In Progress</option>
            <option>QA</option>
            <option>Done</option>
        </select>
    </div>
    <button type="submit" class="btn btn-success mt-2">Save</button>
</form>
